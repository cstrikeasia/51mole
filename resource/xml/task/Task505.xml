			<Action Cmd="DELETE_MOVIE" Param="movie_8" />	
			<Action Cmd="OPEN_PANEL" Param="DazzlePanel2" />
			<Action Cmd="OVER" />
		</EnterMap>	
	</Step>
	
	
</Tasks>


