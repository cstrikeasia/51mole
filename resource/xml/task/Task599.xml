			<Action Cmd="SAY" >
				<Talk NpcID="10213" Face="正常" Msg="果然如此，看來繼續追著火馬下去，一定能找到更多！{$username}，走吧！" Option=""/>
			</Action>
			
			<Action Cmd="PLAY_MOVIE" Param="6" Name="movie_6" IsBg="1" IsFullScreen="1" />	
