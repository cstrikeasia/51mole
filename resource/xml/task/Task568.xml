			<Action Cmd="DELETE_MOVIE" Param="movie_103" />
			<Action Cmd="SAY" >
				<Talk NpcID="10173" Face="正常" Msg="居然是惡魔先遣隊的小惡魔！{$username}還好我們及時揭發他們，不然金獎盃就被他們奪走了！" Option="這個惡魔先遣隊，簡直太可惡了！"/>
				<Talk NpcID="10002" Face="正常" Msg="庫拉、{$username}多虧了你們勇敢地站出來，揭發他們！不然的話……" Option="拉姆運動會，怎能允許小惡魔來搗亂！"/>
				<Talk NpcID="10002" Face="疑惑" Msg="可是現在，原本的前4名都跑掉了，那本次比賽的金獎盃該頒給誰呢？" Option="……………………"/>
			</Action>
			<Action Cmd="DELETE_MOVIE" Param="movie_6" />
			<Action Cmd="PLAY_MOVIE" Param="104" Name="movie_104" IsBg="1" IsFullScreen="1"/>	
			<Action Cmd="DELETE_MOVIE" Param="movie_104" />
			<Action Cmd="TASK_SHOW_SELF" Hide="0"/>
			<Action Cmd="SET_ATTRIBUTE" Level="controlLevel" ResName="strManBtn" Visible="1" />
			<Action Cmd="SET_ATTRIBUTE" Level="controlLevel" ResName="driftBtn" Visible="1" />
			<Action Cmd="SET_ATTRIBUTE" Level="controlLevel" ResName="ballBtn" Visible="1" />
			<Action Cmd="SET_ATTRIBUTE" Level="depthLevel" ResName="schMc" Visible="1" />
			<Action Cmd="SET_ATTRIBUTE" Level="depthLevel" ResName="scoreMc" Visible="1" />
			<Action Cmd="OVER" />
		</EnterMap>
	</Step>
