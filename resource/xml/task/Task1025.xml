			<Action Cmd="PLAY_MOVIE" Param="101" Name="movie_101" IsBg="1" IsFullScreen="1"/>
			<Action Cmd="DELETE_MOVIE" Param="movie_101"/>
			
			<Action Cmd="SAY">
				<Talk NpcID="10294" Face="悲傷" Msg="璨公主，加油。" Option="老爺爺你沒事吧？好像受傷很重的樣子~"/>
				<Talk NpcID="10294" Face="悲傷" Msg="我沒事，我記錄摩靈歷史已經2000年了，哪能跟你們小屁孩一樣不中用？" Option=""/>
			</Action>
			
			<Action Cmd="PLAY_MOVIE" Param="3" Name="movie_3" IsBg="1" IsFullScreen="1"/>
			<Action Cmd="SAY">
				<Talk NpcID="10295" Face="焦急" Msg="泰尼長老……泰尼長老你沒事吧？" Option="老爺爺是受傷了對吧，小恩特？"/>
				<Talk NpcID="10295" Face="焦急" Msg="我們木系的摩靈最怕的就是火焰啊，王早已跨越了摩靈屬性的限制，能夠使用火焰的力量，怎麼辦怎麼辦？" Option=""/>
			</Action>
			<Action Cmd="DELETE_MOVIE" Param="movie_3"/>
			
			<Action Cmd="PLAY_MOVIE" Param="102" Name="movie_102" IsBg="1" IsFullScreen="1"/>
			<Action Cmd="DELETE_MOVIE" Param="movie_102"/>
			
			<Action Cmd="SAY">
				<Talk NpcID="10287" Face="靈感" Msg="泰尼伯伯……請你們照顧好他……" Option="老師，不要分心了，放心我們會照顧好泰尼長老的！"/>
				<Talk NpcID="10295" Face="焦急" Msg="(ㄒoㄒ)璨殿下，怎麼辦啊？" Option=""/>
				<Talk NpcID="10287" Face="靈感" Msg="莫慌，長老會沒事的，把小仙草葉片給他服下，一整片…… " Option=""/>
				<Talk NpcID="10295" Face="焦急" Msg="(ㄒoㄒ)恩恩。" Option=""/>
			</Action>
			
			<Action Cmd="SET_BUFFER" Panel="4" Step="4"/>
		</EnterMap>
	</Step>
	
	<Step ID="4" TarMapID="400">
